# PixelGenesis Environment Configuration
# Must be consistent across backend, web, and mobile

# Environment
VITE_PIXELGENESIS_ENV=development

# API Configuration
VITE_PIXELGENESIS_API_BASE_URL=http://localhost:8000
VITE_PIXELGENESIS_WEB_BASE_URL=http://localhost:3000

# Blockchain Configuration
VITE_PIXELGENESIS_CHAIN_ID=80001
VITE_PIXELGENESIS_RPC_URL=https://rpc-mumbai.maticvigil.com

# Contract Addresses
VITE_PIXELGENESIS_DID_REGISTRY_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000
VITE_PIXELGENESIS_VC_REGISTRY_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000

# IPFS Configuration
VITE_PIXELGENESIS_IPFS_API_URL=https://api.web3.storage
VITE_PIXELGENESIS_IPFS_GATEWAY_URL=https://w3s.link/ipfs/
VITE_PIXELGENESIS_IPFS_API_TOKEN=your-web3-storage-token

# DID Configuration
VITE_PIXELGENESIS_DID_METHOD=did:example

# WalletConnect (optional)
VITE_WALLET_CONNECT_PROJECT_ID=your-walletconnect-project-id
